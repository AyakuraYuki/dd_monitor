{
  "name": "dd_monitor",
  "version": "0.1.0",
  "description": "DD streams monitor, DD means 誰でも大好き",
  "main": "src/index.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "electron .",
    "builder": "rm -rf ./package; electron-builder --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AyakuraYuki/dd_monitor.git"
  },
  "author": "Ayakura Yuki",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/AyakuraYuki/dd_monitor/issues"
  },
  "homepage": "https://github.com/AyakuraYuki/dd_monitor#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.28",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-router": "^3.0.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^3.10.0",
    "@vue/cli-plugin-pwa": "^3.10.0",
    "@vue/cli-service": "^3.10.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.6.10",
    "asar": "^2.0.1",
    "cross-env": "^5.2.1",
    "electron": "^6.0.8",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "productName": "DD Monitor",
    "appId": "cc.ayakurayuki.ddmonitor",
    "copyright": "Copyright © 2019 Ayakura Yuki",
    "icon": "./icon.icns",
    "directories": {
      "buildResources": "build",
      "output": "package"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./package/.icon-ico/icon.ico",
      "uninstallerIcon": "./package/.icon-ico/icon.ico",
      "installerHeaderIcon": "./package/.icon-ico/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DD Monitor"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "./icon.icns",
      "target": [
        "zip",
        "dmg"
      ]
    }
  }
}
